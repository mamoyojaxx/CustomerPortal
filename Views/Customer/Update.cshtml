@{
}

@model CustomerPortal.Models.Entities.Customer;


<h1>Update Customer Information</h1>

@if(Model is null)
{
    <p>This customer is not found</p>
}
else {
<form method="post">
    <div class="mt-3">
        <label class="form-label">
            ID:
        </label>
        <input type="text" class="form-control" asp-for="CustomerID" readonly />
    </div>
    <div class="mt-3">
        <!--margin top 3 pixels-->
        <label class="form-label">
            Name: <!--changes the font for the label-->
        </label>
        <input type="text" class="form-control" asp-for="CustomerName" />
    </div>
    <div class="mt-3">
        <label class="form-label">
            Email:
        </label>
        <input type="email" class="form-control" asp-for="CustomerEmail" />
    </div>
    <div class="mt-3">
        <label class="form-label">
            Phone:
        </label>
        <input type="tel" class="form-control" asp-for="CustomerPhone" />
    </div>
    <div class="mt-3">
        <label class="form-label">
            City:
        </label>
        <input type="text" class="form-control" asp-for="CustomerCity" />
    </div>
    <div class="mt-3">
        <label class="form-label">
            Region:
        </label>
        <input type="text" class="form-control" asp-for="CustomerRegion" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="isSubscribed" />
        <label class="form-check-label" for="Subscribed">
            Subscribed
        </label>
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Save Changes</button>
            <button class="btn btn-danger" type="submit" asp-controller="Customer" asp-action="Delete">Delete</button>
    </div>
</form>
}